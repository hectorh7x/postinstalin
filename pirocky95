#!/bin/bash

# Rocky Linux 9.5 Post-Install Script (VersiÃ³n BÃ¡sica sin SSH ni usuario)
# Ejecutar como root o con sudo

echo "ðŸ”§ Actualizando el sistema..."
dnf update -y && dnf upgrade -y

echo "ðŸ§° Instalando utilidades esenciales..."
dnf install -y epel-release
dnf install -y vim git curl wget htop net-tools unzip nano bash-completion nmap mc nc tcpdump mtr rsync zip unzip tree


echo "ðŸ”¥ Configurando firewalld (solo SSH)..."
systemctl enable firewalld --now
firewall-cmd --permanent --add-service=ssh
firewall-cmd --reload

echo "ðŸ“¦ Habilitando repositorio CRB (CodeReady Builder)..."
dnf config-manager --set-enabled crb

echo "ðŸ“Š Instalando herramientas de monitoreo y logs..."
dnf install -y sysstat
systemctl enable --now sysstat

echo "ðŸ§¹ Limpiando sistema..."
dnf autoremove -y
dnf clean all

echo "âœ… ConfiguraciÃ³n bÃ¡sica completada. Â¡Rocky Linux 9.5 listo para usar!"
